<!DOCTYPE html>
<html>
    <head>
        <title>Admin - Product Manager</title>
        <%- include("../partials/head.ejs") %>
        <link href="/CSS/admin/prodCreation.css" rel="stylesheet">
    </head>
    <body>
        <header>
            <%- include("./partials/header.ejs") %>
        </header>
        <main>
            <h1>Creaci√≥n de datos de producto</h1>
            <div class="data">
                <div class="newData">
                    <form action="/admin/products/create" method="POST" enctype="multipart/form-data" >
                        <h3>Nuevos datos</h3>
                        <label for="categoria">Categoria de Producto</label>
                        <select name="categoria" id="categoria" >
                            <% let categories = ["Monitores", "Headsets", "Sillas", "Teclados", "Mouses", "Parlantes", "Juegos"] %>
                            <% for (category of categories){ %>
                                <option value="<%= category %>"> <%= category %> </option> 
                                <% } %>
                        </select>
                        <label>Nombre de Producto</label>
                        <input type="text" name="prodName" placeholder=" ...">
                        <label>Precio $</label>
                        <input type="number" name="price" placeholder="$">
                        <label>Descuento %</label>
                        <input type="number" name="dto" placeholder="%">
                        <label>Descripcion</label>
                        <input type="textarea" name="description" placeholder=" ...">
                        <p>Caracteristicas:</p>
                        <div class="caracteristicas">
                            <label><input type="checkbox" name="mostSold" value="true" > Mas vendido </label>
                            <label><input type="checkbox" name="selection" value="true"> Nuestra seleccion </label>
                            <label><input type="checkbox" name="offer" value="true"> Ofertas </label>
                        </div>
                        <p>Imagen del producto</p>
                        <input class="file" type="file" name="prodImg">
                        
                        <div class="buttons">
                            <button type="reset">Reset</button>
                            <button type="submit">Guardar</button>
                        </div>
                    </form>
                    
                        <% if (locals.mesage) { %>
                            <h4 class="mesage"> <%= mesage %> </h4>
                        <% } %>
                </div>
            </div>
        </main>
        <footer>
            <%- include("./partials/footer.ejs") %>
        </footer>
    </body>
</html>