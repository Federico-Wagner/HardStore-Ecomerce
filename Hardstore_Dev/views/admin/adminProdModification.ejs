<!DOCTYPE html>
<html>
<head>
    <title>Admin - Product Manager</title>
    <%- include("../partials/head.ejs") %>
    <link href="/CSS/admin/prodModification.css" rel="stylesheet">
</head>
<body>
    <header>
        <%- include("./partials/header.ejs") %>
    </header>
    <main>
        <h1>Modificacion de datos de producto</h1>
        <div class="data">
            <div class="newData">
                <form action="/admin/products/<%=product.prod_id %>/edit?_method=PUT" method="POST" enctype="multipart/form-data">
                    <h3>Producto ID: <%= product.prod_id %></h3>
                    <label for="categoria">Categoria de Producto</label>
                    <select name="categoria" id="categoria" form="categoria">
                        <% let categories = ["Monitores", "Headsets", "Sillas", "Teclados", "Mouses", "Parlantes", "Juegos"] %>
                        <% for (category of categories){ %>
                            <option value="<%= category %>"
                                <%= product.prod_category === category ? 'selected' : null %>>
                                <%= category %>
                            </option> 
                            <% } %>
                    </select>
                    <label>Nombre de Producto</label>
                    <input type="text" name="prodName" value="<%= product.prod_name%>">
                    <label>Precio</label>
                    <input type="text" name="price" value=<%= product.price%>>
                    <label>Descuento</label>
                    <input type="text" name="dto" value=<%= product.dto%>>
                    <label>Descripci√≥n</label>
                    <textarea name="description"><%= product.descripcion%></textarea>
                    <p>Caracteristicas:</p>
                    <div class="caracteristicas">
                        <label><input type="checkbox" name="mostSold" > Mas vendido </label>
                        <label><input type="checkbox" name="selection" > Nuestra seleccion </label>
                        <label><input type="checkbox" name="offer" > Ofertas </label>
                    </div>
                    <p>Imagen del producto</p>
                    <input class="file" type="file" name="prodImg">
                    
                    <div class="buttons">
                        <button type="reset">Reset</button>
                        <button type="submit">Guardar</button>
                    </div>
                </form>
            </div>
            
    </div>
    </main>
    <footer>
        <%- include("./partials/footer.ejs") %>
    </footer>
</body>
</html>