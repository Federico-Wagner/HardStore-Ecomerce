<header>
    <div class="cell_phone">
        <img class="logo" src="/images/header/logo.png" alt="Logo">
        <div class="central_head">
            <div class="head_up">
                <form action="products" method="get">
                    <div class="search_bar">
                        <i class="fas fa-search"></i>
                        <input type="text" name="search" id="search">
                        <button type="submit">Buscar</button>
                    </div>
                </form>
                <a href="/productCart"><i class="fas fa-shopping-cart"></i></a>
            </div>
        
            <div class="head_down">
                <div class="user_menu">
                    <p>User Name</p>
                </div>
                <i class="fas fa-bars"></i>
            </div>       
        </div>
    </div>
    <div class="desktop">
        <div class="structure">
            <a href="/"><img class="logo" src="/images/header/logo.png" alt="Logo1"></a>
            <div class="central_head">
                <div class="head_up">
                    <a class="yellow" href="/"><h1>HARDSTORE</h1></a>
                </div>
                    <div class="head_down">
                        <div class="user_menu">
                            <% if(locals.userLocals){ %>
                                <a class="yellow" href="/user/<%=locals.userLocals.id%>">
                                    <p class="p"> <%=locals.userLocals.username %> </p>
                                </a>
                                <a class="yellow" href="/logout"><p class="p">Logout</p>
                                <i class="fas fa-sign-in-alt"></i>
                                </a>
                                <% }else{ %>
                                    <a class="yellow" href="/register"><p class="p">Registrarme</p>
                                        <i class="far fa-user"></i>
                                    </a>
                                    <a class="yellow" href="/login"><p class="p">Login</p>
                                        <i class="fas fa-sign-in-alt"></i>
                                    </a>
                                <% } %>
                        </div>
                        <a class="yellow" class="carrito" href="/user/<%=locals.userLocals.id %>/Cart"><i class="fas fa-shopping-cart"></i></a>
                    </div>
                </div>
            </div>
            <div class="navbar">
                <ul>
                    <a class="yellow">Home</a>
                    <a class="yellow">Nosotros</a>
                    <a class="yellow">Contacto</a>
                    <a class="yellow">Ubicacion</a>
                </ul>
            </div>
        </div>
</header>